#:kivy 2.1.0
<SummaryWindow>
    name: "summary"
	overall_mileage: overall_mileage
	overall_mpg: overall_mpg
	overall_cpm: overall_cpm
	overall_cpg: overall_cpg


	recent_mileage: recent_mileage
	recent_mpg: recent_mpg
	recent_cpm: recent_cpm
	recent_cpg: recent_cpg

     
	BoxLayout:
		orientation:'vertical' 
		

        # --- App Title --- #   
		Label:
			text: "MPG Summary:"
			background_color: 1, 1, 1, 1
            background_normal: ""
		    canvas.before:
                Color:
                    rgba: 0, 1, 0, 0.5
                Line:    # --- adds a border --- #
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

   
        # --- Overall MPG Label and Values --- #   

		Label:
			text: "Overall Gas Mileage:"
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.2}
			background_color: 1, 0, 0, 1


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
				text: "Total Miles: "
				font_size: (root.width**2 + root.height**2) / 15**4
                background_color: 0, 0, 0, 1

			Label:
				text: "MPG:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Mile:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Gallon:"
				font_size: (root.width**2 + root.height**2) / 15**4


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
			    id: overall_mileage
				text: "99,999.9"
				font_size: (root.width**2 + root.height**2) / 15**4
                background_color: 0, 0, 0, 1

			Label:
			    id: overall_mpg
				text: "99.99"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: overall_cpm
				text: "99.99"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: overall_cpg
				text: "99.99"
				font_size: (root.width**2 + root.height**2) / 15**4


        # --- Recent MPG Label and Values --- #   

		Label:
			text: "Recent Gas Mileage:"
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.2}
			background_color: 0, 0, 1, 1


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}


			Label:
				text: "Total Miles: "
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "MPG:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Mile:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Gallon:"
				font_size: (root.width**2 + root.height**2) / 15**4

			
		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
			    id: recent_mileage
				text: "99,999.9"
				font_size: (root.width**2 + root.height**2) / 15**4
                background_color: 0, 0, 0, 1

			Label:
			    id: recent_mpg
				text: "99.99"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: recent_cpm
				text: "99.99"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: recent_cpg
				text: "99.99"
				font_size: (root.width**2 + root.height**2) / 15**4

		 
        # --- Text Entry Boxes --- #   

			
		GridLayout:
			cols: 3
			rows: 2 
            pos_hint: {'right': 1}

			TextInput:
			    id: new_date
				text: "date"

			TextInput:
			    id: new_mileage
				text: " mileage"

			TextInput:
			    id: new_gallons
				text: "# gallons"

			TextInput:
			    id: new_cost
				text: "price"

			TextInput:
			    id: new_station
				text: "station"
				
			
			TextInput:
			    id: new_notes
				text: "notes"
				

		FloatLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Button:
			    id: newEntry_Button
				on_press: self.addNewEntry()
				text: "  Add New Entry  "
				size_hint_x: None
				size: self.texture_size
                pos_hint: {'right': 0.2}
				background_color: 0.5, 0.5, 1, 1

			Button:
			    id: update_button
				on_press: self.updateValues()
				text: "  Update  "
				size_hint_x: None
				size: self.texture_size
                pos_hint: {'right': 0.6}
				background_color: 0.5, 0.5, 1, 1
	