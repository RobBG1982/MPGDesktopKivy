#:kivy 2.1.0
<SummaryWindow>
    name: "summary"
	overall_mileage: overall_mileage
	overall_mpg: overall_mpg
	overall_cpm: overall_cpm
	overall_cpg: overall_cpg


	recent_mileage: recent_mileage
	recent_mpg: recent_mpg
	recent_cpm: recent_cpm
	recent_cpg: recent_cpg

     
	BoxLayout:
		orientation:'vertical' 
		

        # --- App Title --- #   
		Label:
			text: "MPG Summary:"
			background_color: 1, 1, 1, 1
            background_normal: ""
		    canvas.before:
                Color:
                    rgba: 0, 1, 0, 0.5
                Line:    # --- adds a border --- #
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

   
        # --- Overall MPG Label and Values --- #   

		Label:
			text: "Overall Gas Mileage:"
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.2}
			background_color: 1, 0, 0, 1


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
				text: "Total Miles: "
				font_size: (root.width**2 + root.height**2) / 15**4
                background_color: 0, 0, 0, 1

			Label:
				text: "MPG:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Mile:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Gallon:"
				font_size: (root.width**2 + root.height**2) / 15**4


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
			    id: overall_mileage
				text: "99,999"
				font_size: (root.width**2 + root.height**2) / 15**4
                background_color: 0, 0, 0, 1

			Label:
			    id: overall_mpg
				text: "26.45"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: overall_cpm
				text: "$0.15"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: overall_cpg
				text: "$4.65"
				font_size: (root.width**2 + root.height**2) / 15**4


        # --- Recent MPG Label and Values --- #   

		Label:
			text: "Recent Gas Mileage:"
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.2}
			background_color: 0, 0, 1, 1


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}


			Label:
				text: "Total Miles: "
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "MPG:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Mile:"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: "Cost Per Gallon:"
				font_size: (root.width**2 + root.height**2) / 15**4

			
		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
			    id: recent_mileage
				text: "99,999"
				font_size: (root.width**2 + root.height**2) / 15**4
                background_color: 0, 0, 0, 1

			Label:
			    id: recent_mpg
				text: "26.45"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: recent_cpm
				text: "$0.15"
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
			    id: recent_cpg
				text: "$4.65"
				font_size: (root.width**2 + root.height**2) / 15**4

		 




	