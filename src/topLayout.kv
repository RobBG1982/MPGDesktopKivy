#:kivy 2.1.0
#:import colors utilities.cmn_values.Common_Colors
#:import cmn_str utilities.cmn_values.Common_Strings
<SummaryWindow>
    name: "summary"
	overall_mileage: overall_mileage
	overall_mpg: overall_mpg
	overall_cpm: overall_cpm
	overall_cpg: overall_cpg


	recent_mileage: recent_mileage
	recent_mpg: recent_mpg
	recent_cpm: recent_cpm
	recent_cpg: recent_cpg

	new_date: new_date
	new_gallons: new_gallons
	new_mileage: new_mileage
	new_cost: new_cost
	new_station: new_station
	new_notes: new_notes
	
	newentry_button:  newentry_button
	update_button: update_button 

	canvas.before:
	    Color: 
            rgba: colors.gray_bg
	    Rectangle:
		    pos: self.pos
		    size: self.size	
     
	BoxLayout:
		orientation:'vertical' 
    	color: 

        # --- App Title --- #   
		Label:
			text: cmn_str.label_title
			font_size: 36
			color: colors.pink_title
            background_normal: ""
			bold: "True"

   
        # --- Overall MPG Label and Values --- #   

		Label:
			text: cmn_str.label_overall
			font_size: 24
			color: colors.black
			bold: "True"
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.3}
			


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
				text: cmn_str.label_miles
			    color: colors.black
				font_size: (root.width**2 + root.height**2) /15**4

			Label:
				text: cmn_str.label_mpg
			    color: colors.black
				font_size: (root.width**2 + root.height**2) /15**4

			Label:
				text: cmn_str.label_cpm
			    color: colors.black
				font_size: (root.width**2 + root.height**2) /15**4

			Label:
				text: cmn_str.label_cpg
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
			    id: overall_mileage
				text: cmn_str.label_num_ex4
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"

			Label:
			    id: overall_mpg
				text: cmn_str.label_num_ex3
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"

			Label:
			    id: overall_cpm
				text: cmn_str.label_num_ex3
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"

			Label:
			    id: overall_cpg
				text: cmn_str.label_num_ex3
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"


        # -------------------------------
		#  Recent MPG Label and Values  
		# ------------------------------ 

		Label:
			text: cmn_str.label_recent
			font_size: 24
			color: colors.black
			bold: "True"
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.3}


		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}


			Label:
				text: cmn_str.label_miles
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: cmn_str.label_mpg
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: cmn_str.label_cpm
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			Label:
				text: cmn_str.label_cpg
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			
		BoxLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}

			Label:
			    id: recent_mileage
				text: cmn_str.label_num_ex4
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"

			Label:
			    id: recent_mpg
				text: cmn_str.label_num_ex3
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"

			Label:
			    id: recent_cpm
				text: cmn_str.label_num_ex3
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"

			Label:
			    id: recent_cpg
				text: cmn_str.label_num_ex3
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4
				bold: "True"

		 
        # -------------------------------
		#  New Entry   
		# ------------------------------ 

			
		GridLayout:
			cols: 6
			rows: 2 
            pos_hint: {'right': 1}
			padding: 0, 5, 20, 0

			Label:
				text: cmn_str.label_date_entry
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			TextInput:
			    id: new_date
				text: cmn_str.label_date_ex

			Label:
				text: cmn_str.label_miles_entry
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			TextInput:
			    id: new_mileage
				text: cmn_str.label_num_ex2
			    color: colors.black

			Label:
				text: cmn_str.label_gallons_entry
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			TextInput:
			    id: new_gallons
				text: cmn_str.label_num_ex1
			    color: colors.black

			Label:
				text: cmn_str.label_price_entry
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			TextInput:
			    id: new_cost
				text: cmn_str.label_num_ex1
			    color: colors.black

			Label:
				text: cmn_str.label_station_entry
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4

			TextInput:
			    id: new_station
				text: cmn_str.label_station_ex
			    color: colors.black

			Label:
				text: cmn_str.label_notes_entry
			    color: colors.black
				font_size: (root.width**2 + root.height**2) / 15**4				
			
			TextInput:
			    id: new_notes
				text: cmn_str.label_notes_ex
			    color: colors.black
				

		FloatLayout:
			orientation:'horizontal' 
            pos_hint: {'right': 1}
			padding: 0, 100, 20, 0

			Button:
			    id: newentry_button
				on_press: root.addnewentry()
				text: cmn_str.btn_newentry_text
				size_hint: (0.2, 0.7)
                pos_hint: {'x':.3, 'y':.1}
				background_color: colors.blue_btn

			Button:
			    id: update_button
				on_press: root.updatevalues()
				text: cmn_str.btn_update_text
				size_hint: (0.2, 0.7)
                pos_hint: {'x':.6, 'y':.1}
				background_color: colors.blue_btn
	